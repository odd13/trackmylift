<div class="container-fluid">
  <div class="row-fluid">
  <div class="col-sm-6 col-md-6 center-block text-center" style="float:none">
    <h1>Select Your PR!</h1>
</div>
</div>


<% @exercisegroups.in_groups_of(2, false).each_with_index do | groups, index| %>
    <div class="list-group-horizontal">
      <div class="row-fluid">
      <% groups.each do | group | %>
      <div class="col-md-6 col-sm-6 col-lg-6 text-center">


        <%= link_to group, class: 'list-group-item list-group-item-action flex-column align-items-start' do %>
      <%= group.name %>
      <% end %>

    </div>
  <% end %>
</div>
</br>
</div>
<% end %>
</div>
